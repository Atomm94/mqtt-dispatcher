{
	"name": "crud-api",
	"version": "1.3.0",
	"description": "REST API skeleton using NodeJS and Koa2, Typescript. TypeORM with class-validator, SQL CRUD. Docker.",
	"main": "dist/index.js",
	"readmeFilename": "README.md",
	"scripts": {
		"postbuild": "copyfiles -a **/Module.json dist/",
		"lint": "eslint --fix ./src/**/*.{ts,tsx}",
		"build": "npm run lint && npm run clean && tsc",
		"clean": "npm run clean:build",
		"clean:build": "rm -rf dist",
		"ci": "npm run lint && npm test",
		"dev": "nodemon --watch 'src/**/*' -e ts,tsx --exec ts-node src/index.ts",
		"start": "node dist/src/index.js",
		"test": "SET NODE_ENV=TEST NODE_TEST=true jest",
		"coverage": "SET NODE_ENV=TEST NODE_TEST=true jest --coverage || true",
		"typeorm": "ts-node ./node_modules/typeorm/cli.js"
	},
	"repository": {
		"type": "git",
		"url": ""
	},
	"author": "Gegham",
	"license": "",
	"dependencies": {
		"@types/bcrypt": "^3.0.0",
		"@types/jsonwebtoken": "^8.3.7",
		"@types/koa2-cors": "^2.0.1",
		"@types/request": "^2.48.4",
		"@types/request-promise-native": "^1.0.17",
		"async-request": "^1.2.0",
		"bcrypt": "^3.0.8",
		"class-validator": "^0.9.1",
		"copyfiles": "^2.3.0",
		"date-fns": "^2.12.0",
		"delay": "^4.3.0",
		"dotenv": "^6.2.0",
		"express-winston": "^4.0.3",
		"jsonwebtoken": "^8.5.1",
		"koa": "^2.11.0",
		"koa-body": "^4.2.0",
		"koa-bodyparser": "^4.2.1",
		"koa-compress": "^3.0.0",
		"koa-helmet": "^4.2.1",
		"koa-response-time": "^2.1.0",
		"koa-router": "^7.4.0",
		"koa-static": "^5.0.0",
		"koa2-cors": "^2.0.6",
		"koa2-swagger-ui": "^2.15.4",
		"lodash": "^4.17.20",
		"mqtt": "^4.2.4",
		"node-input-validator": "^2.3.4",
		"pg": "^7.18.2",
		"raven": "^2.6.4",
		"redis": "^3.0.2",
		"reflect-metadata": "^0.1.13",
		"request": "^2.88.2",
		"request-promise-native": "^1.0.8",
		"role-acl": "^4.5.4",
		"swagger-jsdoc": "^3.5.0",
		"swagger-ui-koa": "latest",
		"tsconfig-paths": "^3.9.0",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"@types/dotenv": "^6.1.1",
		"@types/jest": "^24.9.1",
		"@types/koa": "^2.11.2",
		"@types/koa-bodyparser": "^4.3.0",
		"@types/koa-compress": "^2.0.9",
		"@types/koa-helmet": "^3.1.2",
		"@types/koa-response-time": "^2.1.0",
		"@types/koa-router": "^7.0.42",
		"@types/koa__cors": "^2.2.3",
		"@types/lodash": "^4.14.149",
		"@types/node": "^10.17.16",
		"@types/raven": "^2.5.3",
		"@types/supertest": "^2.0.8",
		"@types/swagger-jsdoc": "^3.0.2",
		"@types/uuid": "^3.4.8",
		"@typescript-eslint/eslint-plugin": "^4.3.0",
		"@typescript-eslint/parser": "^4.3.0",
		"eslint": "^7.10.0",
		"eslint-config-standard": "^14.1.1",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-standard": "^4.0.1",
		"jest": "^23.6.0",
		"nodemon": "^1.19.4",
		"pre-commit": "^1.2.2",
		"prettier": "^1.19.1",
		"supertest": "^3.4.2",
		"ts-jest": "^23.10.5",
		"ts-node": "^7.0.1",
		"tslint": "^5.20.1",
		"typescript": "^3.8.3"
	},
	"jest": {
		"testEnvironment": "node",
		"moduleFileExtensions": [
			"js",
			"jsx",
			"json",
			"ts",
			"tsx"
		],
		"transform": {
			"\\.ts$": "ts-jest"
		},
		"testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(js|ts)x?$",
		"testPathIgnorePatterns": [
			"/node_modules/",
			"/dist/",
			"/coverage/"
		]
	},
	"pre-commit": [
		"build"
	]
}
